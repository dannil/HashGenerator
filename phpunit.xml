<?xml version="1.0"?>
<!-- works fine with PHPUnit-3.6.10 -->
<phpunit 
	colors="true"
    stopOnFailure="false"
    convertErrorsToExceptions="true"
    convertNoticesToExceptions="true"
    convertWarningsToExceptions="true"
    bootstrap="vendor/autoload.php">
    <testsuites>
        <testsuite name="HashGenerator Test Suite">
            <directory>tests</directory>
        </testsuite>
    </testsuites>
    
    <filter>
        <whitelist addUncoveredFilesFromWhitelist="true">
            <!-- this is the path of the files included in your clover report -->
            <directory suffix=".php">./HashGenerator/src</directory>
        </whitelist>
    </filter>

    <logging>
        <log type="coverage-html" target="build/coverage" title="HashGenerator"
            charset="UTF-8" yui="true" highlight="true"
            lowUpperBound="35" highLowerBound="70"/>
        <log type="coverage-clover" target="build/logs/clover.xml"/>
        <!-- <log type="junit" target="build/logs/junit.xml" logIncompleteSkipped="false"/> -->
        <!-- <log type="coverage-text" target="php://stdout" /> -->
    </logging>
</phpunit>

